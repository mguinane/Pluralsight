                                <li><a href="#">Pellentesque eget  dui semper</a></li>
                            </ul>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- Footer -->
    <footer>
        <div class="container">
            <div class="row">
                <div class="col-md-12">
                    <!-- Copyright information -->
                    <div class="fpadd">Copyright &copy; 2012 - <a href="#">Your Site</a> / <a href="#">Disclaimer</a> / <a href="#">Privacy Policy</a></div>
                </div>
            </div>
            <div class="clearfix"></div>
        </div>
    </footer>


    <!-- Scroll to top -->
    <span class="totop"><a href="#"><i class="fa fa-angle-up"></i></a></span>


    <!-- JavaScript files -->
    <!-- jQuery -->
    <script src="~/Scripts/jquery-1.10.2.min.js"></script>
    <!-- Angular JS -->
    <script src="~/Scripts/angular.min.js"></script>
    <!-- Easing JS -->
    <script src="~/Scripts/easing.js"></script>
    <!-- Bootstrap JS -->
    <script src="~/Scripts/bootstrap.min.js"></script>
    <!-- Drop Down Menu Plug-in JS -->
    <script src="~/Scripts/ddlevelsmenu.js"></script>
    <!-- Flex Slider JS -->
    <script src="~/Scripts/flexslider.js"></script>
    <!-- Pretty Photo -->
    <script src="~/Scripts/jquery.prettyPhoto.js"></script>
    <!-- Respond JS for IE8 -->
    <script src="~/Scripts/respond.min.js"></script>
    <!-- HTML5 Support for IE -->
    <script src="~/Scripts/html5shiv.js"></script>
    <!-- Custom JS -->
    <script src="~/Scripts/custom.js"></script>
    <!-- This Page Script -->
    <script>
    </script>

    @RenderSection("scripts", required: false)
</body>
</html>